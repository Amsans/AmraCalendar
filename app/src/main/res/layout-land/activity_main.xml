<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/commonDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:hint="@string/select_date"
        android:autofillHints="false"
        android:layout_gravity="center"
        android:inputType="date"
        android:padding="10dp"
        android:focusable="false"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/idBtnSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/amra_flower"
        android:padding="16dp"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/tutDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:autofillHints="false"
        android:gravity="center"
        android:padding="10dp"
        android:inputType="date"
        android:maxLines="1"
        android:hint="@string/tut_date"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/calculate_heliadas"
            android:textAlignment="center"
            android:textColor="@color/dark_primary"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/heliadaDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:autofillHints="true"
                android:focusable="false"
                android:gravity="center"
                android:hint="@string/heliada_date"
                android:inputType="date"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:text="@string/plus" />

            <NumberPicker
                android:id="@+id/heliadaUpDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/equals" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/heliadasInCommon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:hint="@string/heliada_common_format"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textColor="@color/dark_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/heliadasInTUT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:hint="@string/heliada_tut_format"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textColor="@color/dark_primary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>